{
	"name": "simple-local-release",
	"version": "0.0.1",
	"description": "small simple local util for releases, auto changelogs, auto increment version",
	"main": "bin/index.js",
	"bin": {
		"io": "bin/index.js"
	},
	"scripts": {
		"push": "yarn build && npm publish",
		"build": "yarn clean && tsc",
		"clean": "node @utils/clean-app",
		"prepare": "husky",
		"lint": "eslint ./lib",
		"lint:commit": "eslint --fix --color"
	},
	"keywords": [
		"release",
		"git tags",
		"git",
		"versions",
		"changelog"
	],
	"author": "Alexander Lvov",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"deepmerge": "^4.3.1",
		"fs-extra": "^11.2.0",
		"semver": "^7.6.3",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/deepmerge": "^2.2.3",
		"@types/fs-extra": "^11.0.4",
		"@types/inquirer": "^9.0.7",
		"@types/node": "^22.8.1",
		"@types/semver": "^7.5.8",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"eslint": "^8",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"typescript": "^5.6.3"
	}
}
